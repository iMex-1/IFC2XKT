{
  "name": "@xeokit/xeokit-convert",
  "version": "1.3.1",
  "description": "JavaScript utilities to create .XKT files",
  "main": "electron/main.cjs",
  "types": "./types/index.d.ts",
  "bin": {
    "xeokit-convert": "convert2xkt.js"
  },
  "scripts": {
    "server": "node server.js",
    "gui": "cd gui && npm run dev",
    "start": "concurrently \"npm run server\" \"npm run gui\"",
    "electron:dev": "cross-env NODE_ENV=development concurrently \"npm run gui\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "cd gui && npm run build && cd .. && electron-builder",
    "electron:start": "electron .",
    "build:win": "cd gui && npm run build && cd .. && electron-builder --win",
    "build:mac": "cd gui && npm run build && cd .. && electron-builder --mac",
    "build:linux": "cd gui && npm run build && cd .. && electron-builder --linux"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xeokit/xeokit-convert.git"
  },
  "exports": {
    ".": {
      "import": "./src/index.js",
      "require": "./src/index.js",
      "types": "./types/index.d.ts"
    },
    "./convert2xkt.conf.js": "./convert2xkt.conf.js",
    "./convert2xkt.conf.json": "./convert2xkt.conf.json",
    "./convert2xkt.js": {
      "import": "./convert2xkt.js",
      "require": "./convert2xkt.js",
      "types": "./types/convert2xkt.d.ts"
    },
    "./src/index.js": {
      "import": "./src/index.js",
      "require": "./src/index.js",
      "types": "./types/index.d.ts"
    },
    "./src/convert2xkt.js": {
      "import": "./src/convert2xkt.js",
      "require": "./src/convert2xkt.js",
      "types": "./types/convert2xkt.d.ts"
    }
  },
  "type": "module",
  "keywords": [
    "xeolabs",
    "xeokit",
    "bim",
    "opensource",
    "ifc",
    "webgl",
    "xkt",
    "gltf",
    "glb",
    "cityjson",
    "laz",
    "gis"
  ],
  "author": "Lindsay Kay",
  "license": "LICENSE",
  "bugs": {
    "url": "https://github.com/xeokit/xeokit-convert/issues"
  },
  "homepage": "https://github.com/xeokit/xeokit-convert#readme",
  "dependencies": {
    "@loaders.gl/core": "^4.3.4",
    "@loaders.gl/gltf": "^4.3.4",
    "@loaders.gl/images": "^4.3.4",
    "@loaders.gl/json": "^4.3.4",
    "@loaders.gl/las": "^4.3.4",
    "@loaders.gl/obj": "^4.3.4",
    "@loaders.gl/ply": "^4.3.4",
    "@loaders.gl/polyfills": "^4.3.4",
    "@loaders.gl/textures": "^4.3.4",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "pako": "^2.1.0",
    "web-ifc": "0.0.70"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12",
    "png-to-ico": "^3.0.1",
    "rcedit": "^5.0.2",
    "sharp": "^0.34.5",
    "wait-on": "^9.0.3"
  },
  "files": [
    "/src",
    "/types",
    "./convert2xkt.js",
    "./convert2xkt.conf.js",
    "./convert2xkt.conf.json"
  ],
  "build": {
    "appId": "com.ifc2xkt.converter",
    "productName": "IFC2XKT",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron/**/*",
      "gui/dist/**/*",
      "src/**/*",
      "server.js",
      "server-electron.cjs",
      "convert2xkt.js",
      "convert2xkt.conf.js",
      "convert2xkt.conf.json",
      "package.json",
      "node_modules/**/*",
      "!node_modules/**/test",
      "!node_modules/**/tests",
      "!node_modules/**/*.md"
    ],
    "asarUnpack": [
      "node_modules/web-ifc/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "IFC2XKT"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "build/icon.png",
      "category": "Utility"
    }
  }
}